<div class="depot_form">
  <% if flash[:alert] %>
      <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
      <fieldset>
        <legend class="text">Please Log In</legend>

        <div class="text">
          <%= label_tag :name, 'Name:' %>
          <%= text_field_tag :name, params[:name] %>
        </div>

        <div class="text">
          <%= label_tag :password, 'Password:' %>
          <%= password_field_tag :password, params[:password] %>
        </div>

        <div class="text">
          <%= submit_tag "Login" %>
        </div>
      </fieldset>
  <% end %>
</div>
