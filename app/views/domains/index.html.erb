<p id="notice"><%= notice %></p>

<h1 class="text">Domains</h1>

<table>
  <thead>
    <tr class="text">
      <th>Name</th>
      <th>Lastrun</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= domain.name %></td>
        <td><%= domain.lastrun %></td>
        <td class="list_actions"><%= link_to 'Show', domain %></td>
        <td class="list_actions"><%= link_to 'Edit', edit_domain_path(domain) %></td>
        <td class="list_actions"><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Domain', new_domain_path %>
