<!DOCTYPE html>
<html>
  <head>
    <title>ZonescanUi</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='<%= controller.controller_name %>'>
  <div id="banner">
    <%= image_tag 'logo.png', alt: 'Zonescan Logo' %>
    <span class="title"><%= @page_title %></span>
  </div>
  <div id="columns">
    <div id="side">
      <ul>
        <li><a href="<%=public_index_path %>">Home</a></li>
        <li><a href="<%=results_path %>">Results</a></li>
        <li><a href="<%=scans_path %>">Scans</a></li>
        <li><a href="<%=domains_path %>">Domains</a></li>
        <li><a href="<%=users_path %>">Users</a></li>

      </ul>
    </div>
    <div id="main">
    <%= yield %>
    </div>
  </div>
  </body>
</html>

